{
    "manifest_version": 3,
    "name": "TubeGuard",
    "version": "1.0",
    "description": "TubeGuard - YouTube Time Regulator",
    "default_locale": "en",
    "permissions": ["storage", "scripting"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*.youtube.com/*"],
        "js": ["translations.js", "content.js"],
        "css": ["style.css"]
    }],
    "icons": {
        "48": "images/on-time64.png"
    }
}